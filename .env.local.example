# Create a Vercel Postgres database and get these values from .env.local tab
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NO_SSL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Authentication - Generate a strong random secret (use: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-this-in-production

# GitHub OAuth App - Create at https://github.com/settings/developers
# For OAuth authentication (different from GitHub API token below)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback/github

# GitHub API - Create personal access token at https://github.com/settings/tokens
# Used for fetching repository and issue data
NEXT_PUBLIC_GITHUB_TOKEN=

# Email Configuration (for verification & password reset)
# Using SMTP (e.g., Gmail, SendGrid, AWS SES)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@opensource.build